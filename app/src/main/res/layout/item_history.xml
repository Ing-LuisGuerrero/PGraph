<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvItemDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="24/07"
                android:gravity="right|bottom"
                android:textSize="30sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvItemYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2020"
                android:gravity="right|top"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_marginLeft="16dp">

            <TextView
                android:id="@+id/tvItemHeartRate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:lines="1"
                android:text="Ritmo cardiaco: 180 bpm"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tvItemPressure"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:lines="1"
                android:text="Presion: 180/80"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tvItemOxygen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:lines="1"
                android:text="Saturacion de oxigeno: 100%"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvItemHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="3dp"
                    android:paddingHorizontal="8dp"
                    android:text="13:39 PM"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="#FFF"
                    android:background="@drawable/rounded_shape"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/colorPrimaryDark"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvItemNotes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="3dp"
                    android:paddingHorizontal="10dp"
                    android:text="Notas"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="#FFF"
                    android:background="@drawable/rounded_shape"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/colorSecondaryDark"
                    android:layout_marginRight="20dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/shadow"
        android:alpha="0.5"/>

</LinearLayout>